template:    "tpl/bolt"
long_name:   "Repulser Beam"
short_name:  "REPULSE"
notes:       "Repulser Beam"
attributes:  {autotarget: true}
vector:
	color:     {r: 255, g: 0, b: 127}
	accuracy:  131072
expire:
	after:
		age:  "0.5s"
create:
	action:
		*	type:         "sound"
			reflexive:    true
			id:           531
			priority:     3
			persistence:  "10t"
			volume:       255
collide:
	action:
		*	type:       "disable"
			reflexive:  true
			if:
				owner:  "different"
			value:      {begin: -30.0, end: 30.0}
		*	type:       "thrust"
			reflexive:  true
			if:
				owner:  "different"
			relative:   true
			value:      0.047
		*	type:       "spin"
			reflexive:  true
			if:
				owner:  "different"
			value:      {begin: -2.0, end: 2.0}
		*	type:                "create"
			reflexive:           true
			base:                "sfx/explosion/missile-hit"
			relative_direction:  true
		*	type:       "kill"
			reflexive:  true
			kind:       "none"
